{
  "compilerOptions": {
    "target": "es2022", // Or higher
    "module": "esnext", // Or higher
    "moduleResolution": "node",
    "lib": ["es2022", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    },
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": [
    "src",
    "cypress" // Add this line to include Cypress tests
  ],
  "exclude": [
    "node_modules"
  ]
}
